# FILE: .DockerFiles/Dockerfile_ops
# DATE: 2026-01-25
# PURPOSE: Ops toolbox with python + cryptography via apt (PEP668-safe).

FROM debian:bookworm-slim

RUN apt-get update \
 && apt-get install -y --no-install-recommends \
      python3 \
      python3-venv \
      python3-pip \
      python3-cryptography \
      git \
      ca-certificates \
      curl \
      wget \
      nano \
      vim-tiny \
      less \
      procps \
      iproute2 \
      openssh-client \
      tzdata \
      postgresql-client \
      dnsutils \
 && rm -rf /var/lib/apt/lists/*

RUN ln -sf /usr/bin/python3 /usr/bin/python

WORKDIR /app
ENV LANG=C.UTF-8
