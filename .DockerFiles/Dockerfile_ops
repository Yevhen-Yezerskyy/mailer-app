# FILE: .DockerFiles/Dockerfile_ops
# DATE: 2026-01-23
# PURPOSE: PROD always-on toolbox for prod volume: git + basic utils; no app deps.
# CHANGE: + dnsutils (dig) for diagnostics / domain checks.

FROM debian:bookworm-slim

RUN apt-get update \
 && apt-get install -y --no-install-recommends \
      git \
      ca-certificates \
      curl \
      wget \
      nano \
      vim-tiny \
      less \
      procps \
      iproute2 \
      openssh-client \
      tzdata \
      postgresql-client \
      dnsutils \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app
ENV LANG=C.UTF-8