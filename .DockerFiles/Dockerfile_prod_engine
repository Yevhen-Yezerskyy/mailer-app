# FILE: .DockerFiles/Dockerfile_prod_engine  (новое — 2026-01-06)
# PURPOSE: Prod workers base image: python deps from requirements/engine.lock.txt; shared by all engine-* services.

FROM python:3.12-slim

COPY requirements/engine.lock.txt /tmp/requirements/engine.lock.txt

RUN python -m pip install --no-cache-dir -U pip \
 && pip install --no-cache-dir -r /tmp/requirements/engine.lock.txt \
 && rm -rf /tmp/requirements

WORKDIR /app
ENV PYTHONUNBUFFERED=1
